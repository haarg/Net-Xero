<Payments>
  <Payment>
    <Invoice>
      <InvoiceNumber>[% invoice %]</InvoiceNumber>
    </Invoice>
    [% IF account %]
    <Account>
      <Code>[% account %]</Code>
    </Account>
    [% END %]
    <Date>[% date %]</Date>
    <Amount>[% amount %]</Amount>
    <Description><![CDATA[[% description %]]]></Description>
  </Payment>
</Payments>

